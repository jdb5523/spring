{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Spring Boot-MobileAppWsApplication<mobile-app-ws>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.appsdeveloperblog.app.ws.MobileAppWsApplication",
            "projectName": "mobile-app-ws",
            "args": ""
        },
        {
            "type": "java",
            "name": "Spring Boot-App<app>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.jdb.App",
            "projectName": "app",
            "args": ""
        }
    ]
}